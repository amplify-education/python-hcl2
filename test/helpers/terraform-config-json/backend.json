{
  "provider": [
    {
      "aws": {
        "region": "${var.region}"
      }
    },
    {
      "aws": {
        "region": "${var.backup_region}",
        "alias": "backup"
      }
    }
  ],
  "terraform": [
    {
      "required_version": "0.12"
    },
    {
      "backend": [
        {
          "gcs": {}
        }
      ],
      "required_providers": [
        {
          "aws": {
            "source": "hashicorp/aws"
          },
          "null": {
            "source": "hashicorp/null"
          },
          "template": {
            "source": "hashicorp/template"
          }
        }
      ]
    }
  ]
}